{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PillSnap (Debug)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=API_URL=https://api.pillsnap.co.kr",
        "--dart-define=API_KEY=${env:API_KEY}",
        "--dart-define=SUPABASE_URL=${env:SUPABASE_PROJECT_URL}",
        "--dart-define=SUPABASE_ANON_KEY=${env:SUPABASE_ANON_KEY}",
        "--dart-define=DEBUG=true"
      ]
    },
